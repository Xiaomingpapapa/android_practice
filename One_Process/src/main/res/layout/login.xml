<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue5">

        <ImageButton
            android:id="@+id/image_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:src="@drawable/arrows" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_below="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/edit_3"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text9"
                android:layout_width="420px"
                android:layout_height="60px"
                android:textColorHint="@color/hui2"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/edit_3"
                android:layout_width="510px"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="手机号码是找回密码的唯一途径请务必填写真实有效的手机号码"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/edit_4"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text10"
                android:layout_width="420px"
                android:layout_height="60px"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/edit_5"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text11"
                android:layout_width="420px"
                android:layout_height="60px"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/white"
               android:layout_marginTop="4dp"/>
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text15"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/text16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/white"/>
            <RadioGroup
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/text16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:buttonTint="@color/white"
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="女"
                    android:textColor="@color/white"
                    />
                <RadioButton
                    android:buttonTint="@color/white"
                    style="@style/Base.Widget.AppCompat.CompoundButton.RadioButton"
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"

                    />
            </RadioGroup>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_3"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button3"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:text="完成注册"/>
    </LinearLayout>

</RelativeLayout>