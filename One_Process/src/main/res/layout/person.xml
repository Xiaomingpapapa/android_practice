<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue4">

        <ImageButton
            android:id="@+id/image_btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/arrows" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative3">

        <android.support.v7.widget.CardView
            android:layout_width="480px"
            android:layout_height="wrap_content"
            imagecontrol:cardBackgroundColor="@color/blue4"
            imagecontrol:cardCornerRadius="15dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:text="最近您击败了"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:padding="12dp"
                    android:text="10%"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:text="的用户"
                    android:textSize="20sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="480px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            imagecontrol:cardBackgroundColor="@color/blue4"
            imagecontrol:cardCornerRadius="15dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:text="您的活力指数"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:padding="12dp"
                    android:text="35岁"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:text="岁月真是把杀猪刀"
                    android:textSize="20sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="15dp"
        imagecontrol:cardBackgroundColor="@color/white"
        imagecontrol:cardCornerRadius="15dip">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/weight2" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_toRightOf="@+id/image5"
                imagecontrol:cardBackgroundColor="@color/blue4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重日志"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text10"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/text12"
                        android:layout_below="@+id/text11"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前48.3千克" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="亲！体重减少了0.1千克呢，请继续加油！"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>